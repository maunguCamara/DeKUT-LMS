<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Top Bar -->

    <!-- Search Bar -->

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="408dp"
        android:layout_height="62dp"
        android:layout_marginTop="4dp"
        android:background="?attr/colorPrimary"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="28dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/menu_icon"
            android:src="@drawable/ic_menu" />

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/notification_icon"
            android:src="@drawable/ic_notifications" />

    </RelativeLayout>

    <!-- Buttons Grid -->

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:drawableStart="@drawable/ic_search"
        android:hint="Ear Tag, Animal Name, Transponder No"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="77dp" />

    <!-- Summary Section -->

    <!-- Floating Action Button -->

    <!-- Bottom Navigation -->


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:layout_margin="16dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:columnOrderPreserved="false"
        android:rowCount="3"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="373dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cattle_card_view"
            android:layout_width="@dimen/card_view_width"
            android:layout_height="@dimen/card_view_height"
            android:layout_margin="@dimen/layout_margin"
            android:paddingTop="@dimen/margin_top"
            app:cardCornerRadius="@dimen/app_corner_radius"
            app:cardElevation="@dimen/card_elevation">

        <ImageButton
            android:id="@+id/all_animals"
            style="@style/DashboardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/all_animals"
            android:src="@drawable/ic_all_animals" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/milk_card_view"
            android:layout_width="@dimen/card_view_width"
            android:layout_height="@dimen/card_view_height"
            android:layout_margin="@dimen/layout_margin"
            android:paddingTop="@dimen/margin_top"
            app:cardCornerRadius="@dimen/app_corner_radius"
            app:cardElevation="@dimen/card_elevation">


        <ImageButton
            android:id="@+id/ready"
            style="@style/DashboardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/ready"
            android:src="@drawable/ic_ready" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/feeding_card_view"
            android:layout_width="@dimen/card_view_width"
            android:layout_height="@dimen/card_view_height"
            android:layout_margin="@dimen/layout_margin"
            android:paddingTop="@dimen/margin_top"
            app:cardCornerRadius="@dimen/app_corner_radius"
            app:cardElevation="@dimen/card_elevation">


        <ImageButton
            android:id="@+id/masti_pro"
            style="@style/DashboardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/masti_pro"
            android:src="@drawable/ic_masti_pro" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/breeding_card_view"
            android:layout_width="@dimen/card_view_width"
            android:layout_height="@dimen/card_view_height"
            android:layout_margin="@dimen/layout_margin"
            android:paddingTop="@dimen/margin_top"
            app:cardCornerRadius="@dimen/app_corner_radius"
            app:cardElevation="@dimen/card_elevation">

        <ImageButton
            android:id="@+id/pregnancy_check"
            style="@style/DashboardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/pregnancy_check"
            android:src="@drawable/ic_pregnancy_check" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/finance_report_card_view"
            android:layout_width="@dimen/card_view_width"
            android:layout_height="@dimen/card_view_height"
            android:layout_margin="@dimen/layout_margin"
            android:paddingTop="@dimen/margin_top"
            app:cardCornerRadius="@dimen/app_corner_radius"
            app:cardElevation="@dimen/card_elevation">

        <ImageButton
            android:id="@+id/income_expense"
            style="@style/DashboardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/income_expense"
            android:src="@drawable/ic_income_expense" />
        </androidx.cardview.widget.CardView>
        <ImageButton
            android:id="@+id/milk_data"
            style="@style/DashboardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/milk_data"
            android:src="@drawable/ic_milk_data" />

        <ImageButton
            android:id="@+id/gestation_chart"
            style="@style/DashboardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/gestation_chart"
            android:src="@drawable/ic_gestation_chart" />

        <ImageButton
            android:id="@+id/synch"
            style="@style/DashboardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/synch"
            android:src="@drawable/ic_synch" />

        <ImageButton
            android:id="@+id/feed_stock"
            style="@style/DashboardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/feed_stock"
            android:src="@drawable/ic_feed_stock" />

        <ImageButton
            android:id="@+id/ration_wizard"
            style="@style/DashboardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/ration_wizard"
            android:src="@drawable/ic_ration_wizard" />
    </GridLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="92dp"
        android:src="@drawable/ic_add_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Total Animals"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="587dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Lactating"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="301dp"
        tools:layout_editor_absoluteY="606dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Pregnant"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="596dp" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="52dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_logo"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="722dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="855dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
