<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?attr/colorPrimary">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/menu_icon"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notifications"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/notification_icon"/>
    </RelativeLayout>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ear Tag, Animal Name, Transponder No"
        android:drawableStart="@drawable/ic_search"
        android:layout_below="@id/top_bar"
        android:padding="12dp"
        android:background="@drawable/search_bar_background"
        android:layout_margin="16dp"/>

    <!-- Buttons Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        android:layout_margin="16dp"
        android:rowCount="2"
        android:columnCount="4"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false">

        <ImageButton
            android:id="@+id/all_animals"
            style="@style/DashboardButton"
            android:src="@drawable/ic_all_animals"
            android:contentDescription="@string/all_animals"/>

        <ImageButton
            android:id="@+id/ready"
            style="@style/DashboardButton"
            android:src="@drawable/ic_ready"
            android:contentDescription="@string/ready"/>

        <ImageButton
            android:id="@+id/masti_pro"
            style="@style/DashboardButton"
            android:src="@drawable/ic_masti_pro"
            android:contentDescription="@string/masti_pro"/>

        <ImageButton
            android:id="@+id/pregnancy_check"
            style="@style/DashboardButton"
            android:src="@drawable/ic_pregnancy_check"
            android:contentDescription="@string/pregnancy_check"/>

        <ImageButton
            android:id="@+id/income_expense"
            style="@style/DashboardButton"
            android:src="@drawable/ic_income_expense"
            android:contentDescription="@string/income_expense"/>

        <ImageButton
            android:id="@+id/milk_data"
            style="@style/DashboardButton"
            android:src="@drawable/ic_milk_data"
            android:contentDescription="@string/milk_data"/>

        <ImageButton
            android:id="@+id/gestation_chart"
            style="@style/DashboardButton"
            android:src="@drawable/ic_gestation_chart"
            android:contentDescription="@string/gestation_chart"/>

        <ImageButton
            android:id="@+id/synch"
            style="@style/DashboardButton"
            android:src="@drawable/ic_synch"
            android:contentDescription="@string/synch"/>

        <ImageButton
            android:id="@+id/feed_stock"
            style="@style/DashboardButton"
            android:src="@drawable/ic_feed_stock"
            android:contentDescription="@string/feed_stock"/>

        <ImageButton
            android:id="@+id/ration_wizard"
            style="@style/DashboardButton"
            android:src="@drawable/ic_ration_wizard"
            android:contentDescription="@string/ration_wizard"/>

    </GridLayout>

    <!-- Summary Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_grid"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1 Total Animals"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1 Lactating"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1 Pregnant"
            android:textAlignment="center"/>
    </LinearLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"/>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"/>

</RelativeLayout>
